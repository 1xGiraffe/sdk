{
  "compilerOptions": {
    "declaration": true,
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "dom.iterable"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "./dist/"
  },
  "include": ["src/**/*.ts"]
}
