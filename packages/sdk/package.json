{
  "name": "@galacticcouncil/sdk",
  "version": "1.0.0",
  "description": "Galactic off-chain routing & optimization of orders across pools for best price execution",
  "author": "GalacticCouncil",
  "repository": {
    "directory": "packages/sdk",
    "type": "git",
    "url": "git+https://github.com/galacticcouncil/sdk.git"
  },
  "keywords": [
    "hydradx",
    "basilisk",
    "router",
    "sdk"
  ],
  "bugs": {
    "url": "https://github.com/galacticcouncil/sdk/issues"
  },
  "files": [
    "build"
  ],
  "type": "module",
  "main": "./build/index.cjs",
  "types": "./build/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./build/types/index.d.ts",
        "default": "./build/index.mjs"
      },
      "require": {
        "types": "./build/types/index.d.ts",
        "default": "./build/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "postbuild": "tsc --emitDeclarationOnly --outDir build/types/",
    "dev": "npm run build -- --watch",
    "link": "npm ln"
  },
  "devDependencies": {
    "@galacticcouncil/api-augment": "^0.0.4"
  },
  "dependencies": {
    "@galacticcouncil/math-lbp": "^0.1.3",
    "@galacticcouncil/math-omnipool": "^0.1.3",
    "@galacticcouncil/math-xyk": "^0.1.3",
    "@thi.ng/cache": "^2.1.35",
    "bignumber.js": "^9.1.0"
  },
  "peerDependencies": {
    "@polkadot/api": "^10.9.1",
    "ethers": "^5.7.2"
  }
}
