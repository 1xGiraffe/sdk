{
  "name": "@galacticcouncil/sdk",
  "private": false,
  "bugs": {
    "url": "https://github.com/galacticcouncil/sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galacticcouncil/xcm-sdk.git"
  },
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:watch": "turbo run build:watch",
    "clean": "turbo run clean",
    "link": "turbo run link",
    "test": "turbo run test",
    "changeset": "changeset",
    "changeset:version": "changeset version && npm i --package-lock-only",
    "changeset:publish": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@types/jest": "^28.1.8",
    "es-jest": "^2.0.0",
    "esbuild": "^0.17.11",
    "esbuild-plugin-wasm": "^1.0.0",
    "fs-extra": "^10.1.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "tsx": "^3.8.2",
    "turbo": "^1.9.9",
    "typescript": "^4.7.4"
  }
}
