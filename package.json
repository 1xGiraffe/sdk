{
  "name": "@galacticcouncil/sdk",
  "version": "0.0.6",
  "private": false,
  "description": "Galactic SDK",
  "author": "Pavol Noha <palo@hydradx.io>",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "cleanup": "rimraf out && rimraf dist",
    "copy:assets": "cp -R ./src/registry/kusama/ ./dist/kusama/ && cp -R ./src/registry/polkadot/ ./dist/polkadot/",
    "build": "node ./esbuild.mjs && tsc --emitDeclarationOnly --outDir dist/types/",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "xcmgr:sync": "npx tsx ./src/registry/sync.ts"
  },
  "devDependencies": {
    "@types/jest": "^28.1.8",
    "es-jest": "^2.0.0",
    "esbuild": "^0.14.53",
    "esbuild-plugin-wasm": "^1.0.0",
    "fs-extra": "^10.1.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "tsx": "^3.8.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@galacticcouncil/math-lbp": "^0.0.7",
    "@galacticcouncil/math-omnipool": "^0.0.7",
    "@galacticcouncil/math-xyk": "^0.0.7",
    "bignumber.js": "^9.1.0",
    "lodash.clonedeep": "^4.5.0"
  },
  "peerDependencies": {
    "@polkadot/api": "^9.9.1",
    "capi": "^0.1.0-beta.12",
    "web3": "^1.8.2"
  }
